{
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier", "plugin:@typescript-eslint/recommended"],
  "plugins": ["only-error", "prettier", "unused-imports", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": [
			"error",
			{ "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
		]
  }
}